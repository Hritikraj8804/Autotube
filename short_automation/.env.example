# ===================================
# n8n Authentication
# ===================================
# Set to true to enable basic auth
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=your_email@example.com
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# ===================================
# Encryption Key
# ===================================
# Generate a random string for this (e.g., use: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=generate-a-random-32-char-key-here

# ===================================
# PostgreSQL Database
# ===================================
POSTGRES_USER=n8n
POSTGRES_PASSWORD=your_secure_db_password
POSTGRES_DB=n8n
